_fgen()
{
    local cur prev opts
    
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="--accessors
          --compilation-database
          --output
          --skip-namespaces
          --stubs
          --target"

    case "${cur}" in 
        -*)
            COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
            ;;
    esac
    
    return 0
}

complete -o default -F _fgen fgen
